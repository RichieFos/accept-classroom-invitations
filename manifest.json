{
  "manifest_version": 3,
  "name": "Accept Google Classroom Invitations",
  "description": "Simple extension to auto-accept all invitations in Google Classroom.",
  "version": "1.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "default_state": "disabled"
  },
  "permissions": ["tabs", "scripting", "notifications"],
  "host_permissions": ["https://classroom.google.com/*"]
}
